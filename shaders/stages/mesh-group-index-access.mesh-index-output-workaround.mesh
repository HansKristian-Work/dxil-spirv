struct VOut
{
	float4 pos : SV_Position;
};

[numthreads(2, 3, 4)]
[outputtopology("triangle")]
void main(uint tid : SV_GroupIndex,
		out vertices VOut vout[24],
		out indices uint3 ind[8])
{
	SetMeshOutputCounts(24, 8);
	vout[tid].pos = 1.0.xxxx;
	if (tid < 4)
	{
		ind[tid] = 3 * tid + uint3(0, 1, 2);
	}
}
